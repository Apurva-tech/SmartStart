<head>
   <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
   <link rel="stylesheet" href="/css/Account.css">
</head>

<body>
    {{> _header}}
   <div class="container">
       <div class="main">
           </div>
           <div class="row">
             <div class="col-md-4 mt-1">
                 <div class="card text-center sidebar">
                   <div class="card-body">
                     <img src="{{startlogo}}" class="rounded-circle" width="150">
                     <div class="mt-3">
 					     <h3>{{startName}}</h3>                         
                    </div>
                  </div>
                </div>
             </div>
             <div class="col-md-8 mt-1">
                  <div class="card mb-3 content">
                     <h1 class="a-3 pt-3">About</h1>
                     <div class="card-body">
                          <div class="row">
                             <div class="col-md-3">
                               <h5>Startup Name</h5>
                             </div>
                             <div class="col-md-9 text-secondary">
                                 {{startName}}
                             </div>
                         </div>
                         <hr>
                         <div class="row">
                            <div class="col-md-3">
                              <h5>Startup Email</h5>
                            </div>
                            <div class="col-md-9 text-secondary">
                               {{startupEmail}}
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                           <div class="col-md-3">
                                <h5>Startup CIN</h5>
                           </div>
                           <div class="col-md-9 text-secondary">
                              {{startCIN}}
                           </div>
                        </div>
                        <hr>
                        <div class="row">
                             <div class="col-md-3">
                                  <h5>Startup stage</h5>
                             </div>
                             <div class="col-md-9 text-secondary">
  							      {{startStage}}
                             </div>
                         </div>
						 <hr>
                        <div class="row">
                             <div class="col-md-3">
                                  <h5>Startup Nature</h5>
                             </div>
                             <div class="col-md-9 text-secondary">
  							      {{startNature}}
                             </div>
                         </div>
						 <hr>
                        <div class="row">
                             <div class="col-md-3">
                                  <h5>Startup Website Link</h5>
                             </div>
                             <div class="col-md-9 text-secondary">
  							      <a style="color: #6c757d;" href="https://play.google.com/store/apps/details?id=com.goflipr.flipr&hl=en_IN&gl=US">{{startWebsiteLink}}</a>
                             </div>
                         </div> 
						 <hr>
                        <div class="row">
                             <div class="col-md-3">
                                  <h5>Startup Details</h5>
                             </div>
                             <div class="col-md-9 text-secondary">
  							       {{startDetails}}
                             </div>
                         </div>
						 <hr>
                     </div>
                 </div>
                 
               </div>
           </div>
           <br><br>
           <h1>INTERNS APPLIED</h1>
    <table class="content-table">
        <thead>
            <tr>
                <th>Intern name</th>
                <th>Email</th>
                <th>Department</th>
                <th>Date of Application</th>
                <th colspan="2">Action</th>
            </tr>
        </thead>
        <tbody>
            {{#each tableIntern}}
            <tr>
                <td>{{this.internName}}</td>
                <td>{{this.internEmail}}</td>
                <td>{{this.department}}</td>
                <td>{{this.DOA}}</td>
                <td> 
                    <form action="/actionIntern" method="POST">
                    <input type="hidden" name="internEmail" value="{{this.internEmail}}">
                    <input type="hidden" name="status" value="A">
                    <input type="submit" value ="Accept">
                    </form>
                </td>
                <td> 
                    <form action="/actionIntern" method="POST">
                    <input type="hidden" name ="internEmail" value="{{this.internEmail}}">
                    <input type="hidden" name="status" value="R">
                    <input type="submit" value ="Reject">
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <br><br>
	        <h1>INVESTORS APPLIED</h1>
    <table class="content-table">
        <thead>
            <tr>
                <th>Company Name</th>
                <th>Company Email</th>
                <th>Company Type</th>
                <th>Date of Application</th>
            </tr>
        </thead>
        <tbody>
             {{#each tableInvestor}}
            <tr>
                <td>{{this.companyName}}</td>
                <td>{{this.companyEmail}}</td>
                <td>{{this.companyType}}</td>
                <td>{{this.DOI}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
	 	     <br><br>   
       </div>
    </div>
</body>
</html>
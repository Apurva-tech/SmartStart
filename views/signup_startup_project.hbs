<html>
    <head>
        <link rel="stylesheet" text="text/css" href="/css/main.css" />
    </head>
    <body>
        <div id="container" style="top:1%" class="tab">
            <form action="#">
                <h1>Startup Project Details</h1>
                <hr id="header_seperator" />
                <div class="proj1">
                    <h2>Project 1</h2>
                    <div class="text_field_container">
                        <input type="text" placeholder=" " required />
                        <span></span>
                        <label>Project Name</label>         
                    </div>
    
                    <div class="text_field_container">
                        <input type="text" placeholder=" " required />
                        <span></span>
                        <label>Development Team</label>         
                    </div>
    
                    <table>
                        <tr>
                            <td class="left">Stage: </td>
                            <td class="right">
                                <select>
                                    <option>-Select-</option>
                                    <option>Ideation</option>
